<div class="hero-unit">
  <h1>Cluster <%= @cluster.name.capitalize %></h1>

  <p class="center"><%= link_to "All clusters", clusters_path %></p>
</div>

<%= will_paginate @galaxies %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="1" width="20">ID</th>
    <th colspan="5">Galaxy</th>
  </tr>
  </thead>
  <tbody>
  <% @galaxies.each do |galaxy| %>
    <tr>
      <td><%= galaxy.id %></td>
      <td><%= link_to galaxy.name.capitalize, galaxy %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @galaxies %>

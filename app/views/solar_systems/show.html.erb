<div class="hero-unit">
  <h1>System <%= @system.name %></h1>

  <p class="center">Galaxy: <%= link_to @system.galaxy.name.capitalize, @system.galaxy %></p>
</div>

<%= will_paginate @planets %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="1" width="20">ID</th>
    <th colspan="5">Planet</th>
  </tr>
  </thead>
  <tbody>
  <% @planets.each do |planet| %>
    <tr>
      <td><%= planet.id %></td>
      <td><%= link_to planet.name.capitalize, planet %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @planets %>
